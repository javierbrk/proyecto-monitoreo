          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["mean"]
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 30, "color": "yellow"},
                {"value": 40, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 80, "color": "red"}
