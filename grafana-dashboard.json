            "datasource": "InfluxDB",
            "query": "SELECT mean(\"temp\") FROM \"medicionesCO2\" WHERE (\"device\" =~ /^$device$/ AND \"sensor\" =~ /^$sensor$/) AND $timeFilter GROUP BY time($__interval), \"device\", \"sensor\" fill(linear)",
            "rawQuery": true,
            "resultFormat": "time_series",
            "alias": "$tag_device - $tag_sensor"
          }
        ],
        "xaxis": {
          "mode": "time",
          "show": true
        },
        "yaxes": [
          {
            "format": "celsius",
            "label": "Temperatura",
