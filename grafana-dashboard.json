{
  "dashboard": {
    "title": "AlterMundi - Monitoreo de Sensores",
    "tags": ["altermundi", "sensores", "ambiente"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 0,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": [
        {
          "name": "device",
          "label": "Dispositivo",
          "type": "query",
          "datasource": "InfluxDB",
          "query": "SHOW TAG VALUES FROM \"medicionesCO2\" WITH KEY = \"device\"",
          "multi": true,
          "includeAll": true,
          "refresh": 1,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "sensor",
          "label": "Tipo de Sensor",
          "type": "query",
          "datasource": "InfluxDB",
          "query": "SHOW TAG VALUES FROM \"medicionesCO2\" WITH KEY = \"sensor\"",
          "multi": true,
          "includeAll": true,
          "refresh": 1,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "Resumen General",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "collapsed": false
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Dispositivos Activos",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 1
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            },
            "color": {
              "mode": "thresholds"
            },
            "mappings": []
          }
        },
        "targets": [
          {
            "datasource": "InfluxDB",
            "query": "SELECT COUNT(DISTINCT(\"device\")) FROM \"medicionesCO2\" WHERE $timeFilter",
            "rawQuery": true,
            "resultFormat": "time_series"
          }
        ]
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Temperatura Promedio",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 1
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["mean"]
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"},
                {"value": 18, "color": "green"},
                {"value": 25, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            },
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "decimals": 1
          }
        },
        "targets": [
          {
            "datasource": "InfluxDB",
            "query": "SELECT mean(\"temp\") FROM \"medicionesCO2\" WHERE (\"device\" =~ /^$device$/ AND \"sensor\" =~ /^$sensor$/) AND $timeFilter GROUP BY time($__interval) fill(null)",
            "rawQuery": true,
            "resultFormat": "time_series"
          }
        ]
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Humedad Promedio",
