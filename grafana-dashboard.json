            "datasource": "InfluxDB",
            "query": "SELECT last(\"temp\") as \"temp\", last(\"hum\") as \"hum\", last(\"co2\") as \"co2\" FROM \"medicionesCO2\" WHERE (\"device\" =~ /^$device$/ AND \"sensor\" =~ /^$sensor$/) AND $timeFilter GROUP BY \"device\", \"sensor\"",
            "rawQuery": true,
            "resultFormat": "table"
          }
        ],
        "transformations": [
